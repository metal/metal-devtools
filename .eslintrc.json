{
	"env": {
		"browser": true,
		"node": true
	},
	"globals": {
		"chrome": true
	},
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": ["react"],
	"rules": {
		"semi": 0,
		"no-bitwise": 0,
		"curly": 2,
		"eqeqeq": 2,
		"no-eval": 0,
		"guard-for-in": 0,
		"wrap-iife": [2, "any"],
		"max-depth": 0,
		"no-multi-str": 0,
		"new-cap": 2,
		"no-caller": 2,
		"quotes": [
			1,
			"single",
			{ "allowTemplateLiterals": true }
		],
		"no-undef": 2,
		"no-unused-vars": 2,
		"react/jsx-uses-vars": [2]
	}
}
