{
  "name": "metal-devtools",
  "version": "1.1.0",
  "description": "Metal Developer Tools",
  "scripts": {
    "build": "npm run build:injected && npm run build:chrome",
    "build:chrome": "webpack --config shells/chrome/webpack.config.js",
    "build:injected": "webpack --config injected/webpack.config.js",
    "format": "eslint . --ignore-pattern node_modules --ignore-pattern build --fix",
    "lint": "eslint . --ignore-pattern node_modules --ignore-pattern build",
    "test": "jest"
  },
  "author": "Bryce Osterhaus <bryceosterhaus@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/metal/metal-devtools"
  },
  "license": "MIT",
  "homepage": "https://github.com/metal/metal-devtools",
  "dependencies": {
    "immutable": "^3.8.1",
    "jsoneditor": "^5.5.11",
    "lodash": "^4.17.4",
    "metal-jsx": "^2.5.13"
  },
  "babel": {
    "plugins": [
      "lodash"
    ],
    "presets": [
      "metal-jsx",
      "es2015",
      "stage-3"
    ]
  },
  "jest": {
    "automock": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/docroot/js/src/tests/"
    ],
    "modulePathIgnorePatterns": [
      "node_modules"
    ],
    "snapshotSerializers": [
      "metal-jest-serializer"
    ],
    "timers": "fake",
    "unmockedModulePathPatterns": [
      "immutable",
      "lodash",
      "metal-dom",
      "metal-jsx"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.8",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-jest": "^18.0.0",
    "babel-preset-metal-jsx": "0.0.3",
    "babel-preset-stage-3": "^6.17.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.8.0",
    "file-loader": "^0.9.0",
    "jest": "^18.1.0",
    "js-beautify": "^1.6.8",
    "metal-jest-serializer": "^1.0.0",
    "node-sass": "^4.3.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3"
  }
}
